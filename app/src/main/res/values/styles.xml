<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <color name="translusent_white">#7fff</color>
    <color name="transparent_white">#3fff</color>
    <color name="translusent_black">#7000</color>
    <color name="transparent_black">#3000</color>
    <color name="transparent_red">#3f00</color>
    <color name="translusent_red">#7f00</color>
    <color name="transparent_blue">#300f</color>
    <color name="translusent_blue">#700f</color>
    <color name="transparent_purple">#4f0f</color>
    <color name="translusent_purple">#7f0f</color>
    <color name="red">#f00</color>
    <color name="white">#fff</color>
    <color name="black">#000</color>
    <color name="blue">#00f</color>
    
    <style name="cell">
        <item name="android:id">@android:id/text1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!-- Light theme for text in cell. -->
    <style name="cell_light" parent="@style/cell">
        <item name="android:textColor">@color/translusent_black</item>  
    </style>
    
    <style name="cell_today_light" parent="@style/cell">
        <item name="android:background">@color/transparent_black</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="cell_today_event_light" parent="@style/cell">
        <item name="android:background">@color/transparent_blue</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="cell_today_weekend_light" parent="@style/cell">
        <item name="android:background">@color/transparent_red</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="cell_today_weekend_event_light" parent="@style/cell">
        <item name="android:background">@color/transparent_purple</item>
        <item name="android:textColor">@color/blue</item>
    </style>
    
    <style name="cell_in_month_light" parent="@style/cell">
        <item name="android:background">@color/transparent_black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="cell_in_month_event_light" parent="@style/cell">
        <item name="android:background">@color/transparent_blue</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="cell_in_month_weekend_light" parent="@style/cell">
        <item name="android:background">@color/transparent_red</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="cell_in_month_weekend_event_light" parent="@style/cell">
        <item name="android:background">@color/transparent_purple</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <!-- Dark theme for text in cell. -->
    <style name="cell_dark" parent="@style/cell">
        <item name="android:textColor">@color/translusent_white</item>
    </style>
    
    <style name="cell_today_dark" parent="@style/cell">
        <item name="android:background">@color/transparent_white</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="cell_today_weekend_dark" parent="@style/cell">
        <item name="android:background">@color/translusent_red</item>
        <item name="android:textColor">@color/blue</item>
    </style>
    
    <style name="cell_in_month_dark" parent="@style/cell">
        <item name="android:background">@color/transparent_white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="cell_in_month_weekend_dark" parent="@style/cell">
        <item name="android:background">@color/translusent_red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="cell_in_month_event_dark" parent="@style/cell">
        <item name="android:background">@color/translusent_blue</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="cell_in_month_weekend_event_dark" parent="@style/cell">
        <item name="android:background">@color/translusent_purple</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="cell_today_event_dark" parent="@style/cell">
        <item name="android:background">@color/translusent_blue</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="cell_today_weekend_event_dark" parent="@style/cell">
        <item name="android:background">@color/translusent_purple</item>
        <item name="android:textColor">@color/blue</item>
    </style>
    
</resources>
